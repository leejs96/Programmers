public int solution(int n) {
    int answer = 0;
    int num = 1;
    
    while(true) {
        int fac = factorial(num);
        if(n < fac) {
            break;
        } else {
            num += 1;
        }
    }
    
    return answer = num-1;
}
    
int factorial(int num) {
  if(num == 1) {
      return 1;
  } else {
      return num * factorial(num-1);
  }
}
